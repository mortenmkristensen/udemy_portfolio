<h1>Angular Portfolio Items</h1>

<%= link_to "Create new item", new_portfolio_path %>

<% @angular_portfolio_items.each do |item| %>
    <p><%= link_to item.title, portfolio_show_path(item.id) %></p>
    <p><%= item.subtitle %></p>
    <p><%= item.body %> </p>
    <%= image_tag item.thumb_image if !item.thumb_image.nil? %></p>
    <%= link_to "Edit", edit_portfolio_path(item.id) %>
    <%= link_to 'Delete', portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %> 